@model CuaHangBanSach.Models.Supplier
@{
    ViewData["Title"] = "Sửa nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">✏️ Sửa nhà cung cấp</h2>

<form asp-action="Edit" method="post" class="w-75 mx-auto">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label fw-semibold">Tên nhà cung cấp</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label fw-semibold">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Phone" class="form-label fw-semibold">Số điện thoại</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Address" class="form-label fw-semibold">Địa chỉ</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary px-4">Cập nhật</button>
        <a asp-action="Index" class="btn btn-secondary px-4">Huỷ</a>
    </div>
</form>