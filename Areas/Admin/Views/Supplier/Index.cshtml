@model CuaHangBanSach.ViewModels.SupplierListViewModel
@{
    ViewData["Title"] = "Danh sách nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">Danh sách nhà cung cấp</h2>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Tìm theo tên, email, SĐT..." value="@Model.SearchTerm" />
        <button type="submit" class="btn btn-primary">Tìm</button>
    </div>
</form>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Add" class="btn btn-success px-4">➕ Thêm mới</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th class="text-center">#</th>
            <th>Tên</th>
            <th>Email</th>
            <th>Điện thoại</th>
            <th>Địa chỉ</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items != null && Model.Items.Any())
        {
            var index = (Model.PageNumber - 1) * Model.PageSize + 1;
            foreach (var s in Model.Items)
            {
                <tr>
                    <td class="text-center">@index</td>
                    <td>@s.Name</td>
                    <td>@s.Email</td>
                    <td>@s.Phone</td>
                    <td>@s.Address</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-warning btn-sm me-1">Sửa</a>
                        <a asp-action="Display" asp-route-id="@s.Id" class="btn btn-info btn-sm me-1">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-danger btn-sm">Xoá</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr><td colspan="6" class="text-center text-muted">Chưa có nhà cung cấp nào.</td></tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" href="?page=@i&search=@Model.SearchTerm">@i</a>
            </li>
        }
    </ul>
</nav>