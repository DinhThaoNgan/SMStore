@model CuaHangBanSach.Models.Slider

@{
    ViewData["Title"] = "Thêm tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4 text-center text-primary">Thêm tin tức mới</h2>
    <form asp-area="Admin" asp-controller="Slider" asp-action="Create" method="post" enctype="multipart/form-data">

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-semibold">Tên tin tức</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-semibold">Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImageUpload" class="form-label fw-semibold">Hình ảnh tin tức</label>
            <input type="file" asp-for="ImageUpload" class="form-control" id="imageInput" />
            <span asp-validation-for="ImageUpload" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <img id="previewImage" src="~/images/no-image.png" alt="Xem trước ảnh" class="img-thumbnail border" style="max-width: 300px;" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary px-4">Thêm</button>
            <a asp-area="Admin" asp-controller="Slider" asp-action="Index" class="btn btn-secondary">Huỷ</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.getElementById('imageInput').addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('previewImage').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}