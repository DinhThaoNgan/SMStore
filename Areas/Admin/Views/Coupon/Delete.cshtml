@model CuaHangBanSach.Models.Coupon

@{
    ViewData["Title"] = "Xác nhận xoá mã giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="text-danger text-center mb-4">Bạn có chắc muốn xoá mã giảm giá này?</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3"><i class="bi bi-tag-fill me-1"></i> @Model.Code</h5>

            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong>Số tiền giảm:</strong> @Model.DiscountAmount @(@Model.IsPercentage ? "%" : "₫")
                </li>
                <li class="list-group-item">
                    <strong>Ngày bắt đầu:</strong> @Model.StartDate.ToString("dd/MM/yyyy")
                </li>
                <li class="list-group-item">
                    <strong>Ngày kết thúc:</strong> @Model.EndDate.ToString("dd/MM/yyyy")
                </li>
                <li class="list-group-item">
                    <strong>Hình thức:</strong> @(Model.IsPercentage ? "Phần trăm" : "Số tiền cố định")
                </li>
            </ul>
        </div>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-danger px-4 me-3">Xoá</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Huỷ</a>
        </div>
    </form>
</div>