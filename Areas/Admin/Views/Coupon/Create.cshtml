@model CuaHangBanSach.Models.Coupon

@{
    ViewData["Title"] = "Thêm mã giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4 text-center text-success">Thêm mã giảm giá mới</h2>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Code" class="form-label fw-semibold">Mã giảm giá</label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DiscountAmount" class="form-label fw-semibold">Mức giảm</label>
            <input asp-for="DiscountAmount" class="form-control" />
            <span asp-validation-for="DiscountAmount" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="StartDate" class="form-label fw-semibold">Ngày bắt đầu</label>
            <input asp-for="StartDate" class="form-control" type="datetime-local" />
            <span asp-validation-for="StartDate" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EndDate" class="form-label fw-semibold">Ngày kết thúc</label>
            <input asp-for="EndDate" class="form-control" type="datetime-local" />
            <span asp-validation-for="EndDate" class="text-danger small"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsPercentage" class="form-check-input" />
            <label asp-for="IsPercentage" class="form-check-label">Giảm theo phần trăm</label>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success px-4">Thêm</button>
            <a asp-action="Index" class="btn btn-secondary ms-2 px-4">Huỷ</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}