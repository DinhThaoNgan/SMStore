@model CuaHangBanSach.Models.ApplicationUser
@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-3 text-primary">Thông tin người dùng</h4>

                    <dl class="row">
                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Họ tên:</dt>
                        <dd class="col-sm-9">@Model.FullName</dd>

                        <dt class="col-sm-3">Điện thoại:</dt>
                        <dd class="col-sm-9">@Model.PhoneNumber</dd>

                        <dt class="col-sm-3">Tuổi:</dt>
                        <dd class="col-sm-9">@Model.Age</dd>

                        <dt class="col-sm-3">Địa chỉ:</dt>
                        <dd class="col-sm-9">@Model.Address</dd>

                        <dt class="col-sm-3">Quyền:</dt>
                        <dd class="col-sm-9">
                            @await Component.InvokeAsync("UserRole", new { user = Model })
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="mt-3 text-center">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">✏️ Sửa</a>
                <a asp-action="Index" class="btn btn-secondary">← Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>