@model CuaHangBanSach.ViewModels.OrderListViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Danh sách đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 fw-bold" style="color: #2c3e50;">
            <i class="bi bi-receipt-cutoff text-primary me-2"></i>Quản lý Đơn hàng
        </h2>
    </div>

    <div class="card shadow-lg mb-4">
        <div class="card-body">
            <form method="get" class="mb-0">
                <div class="input-group input-group-lg">
                    <span class="input-group-text bg-primary text-white">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" name="search" value="@Model.SearchTerm" class="form-control" placeholder="Tìm theo tên khách hàng hoặc username..." />
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-2"></i>Tìm kiếm
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Items.Any())
    {
        <div class="card shadow-lg">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox fs-1 text-muted d-block mb-3"></i>
                <p class="text-muted mb-0">Chưa có đơn hàng nào.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Danh sách đơn hàng</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="text-center" style="width: 5%;">#</th>
                                <th style="width: 20%;">Khách hàng</th>
                                <th class="text-center" style="width: 15%;">Ngày đặt</th>
                                <th class="text-center" style="width: 15%;">Tổng tiền</th>
                                <th class="text-center" style="width: 20%;">Trạng thái</th>
                                <th class="text-center" style="width: 25%;">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Items)
                            {
                                <tr>
                                    <td class="text-center fw-bold text-primary">#@order.Id</td>
                                    <td>
                                        <div>
                                            <strong class="text-dark">@(
                                                string.IsNullOrWhiteSpace(order.CustomerName)
                                                ? (string.IsNullOrWhiteSpace(order.ApplicationUser?.FullName)
                                                ? order.ApplicationUser?.UserName ?? "Không rõ"
                                                : order.ApplicationUser.FullName)
                                                : order.CustomerName
                                            )</strong>
                                            @if (!string.IsNullOrWhiteSpace(order.PhoneNumber))
                                            {
                                                <br><small class="text-muted"><i class="bi bi-telephone me-1"></i>@order.PhoneNumber</small>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <small>@order.OrderDate.ToLocalTime().ToString("dd/MM/yyyy")</small><br>
                                        <small class="text-muted">@order.OrderDate.ToLocalTime().ToString("HH:mm")</small>
                                    </td>
                                    <td class="text-center">
                                        <span class="fw-bold text-danger">@($"{order.TotalPrice:N0} ₫")</span>
                                    </td>
                                    <td class="text-center">
                                        @{
                                            var options = new List<SelectListItem>
                                            {
                                                new SelectListItem { Text = "Chờ xác nhận", Value = "Chờ xác nhận" },
                                                new SelectListItem { Text = "Đang xử lý", Value = "Đang xử lý" },
                                                new SelectListItem { Text = "Đang giao hàng", Value = "Đang giao hàng" },
                                                new SelectListItem { Text = "Đã hoàn thành", Value = "Đã hoàn thành" },
                                                new SelectListItem { Text = "Đã hủy", Value = "Đã hủy" }
                                            };

                                            if (order.Status == "Đang giao hàng")
                                            {
                                                options.RemoveAll(o => o.Value == "Đã hủy");
                                            }
                                            else if (order.Status == "Đã hoàn thành" || order.Status == "Đã hủy")
                                            {
                                                options.Clear();
                                            }

                                            var statusColors = new Dictionary<string, string>
                                            {
                                                { "Chờ xác nhận", "bg-warning text-dark" },
                                                { "Đang xử lý", "bg-info text-white" },
                                                { "Đang giao hàng", "bg-primary text-white" },
                                                { "Đã hoàn thành", "bg-success text-white" },
                                                { "Đã hủy", "bg-danger text-white" }
                                            };
                                            var currentStatusClass = statusColors.ContainsKey(order.Status) ? statusColors[order.Status] : "bg-secondary text-white";
                                        }

                                        @if (options.Any())
                                        {
                                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                                <input type="hidden" name="orderId" value="@order.Id" />
                                                <select name="status" class="form-select form-select-sm d-inline-block" style="width: auto; min-width: 150px;" onchange="this.form.submit()">
                                                    @foreach (var option in options)
                                                    {
                                                        if (option.Value == order.Status)
                                                        {
                                                            <option value="@option.Value" selected>@option.Text</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@option.Value">@option.Text</option>
                                                        }
                                                    }
                                                </select>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="badge @currentStatusClass">@order.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2 justify-content-center flex-wrap">
                                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info" title="Xem chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (order.Status == "Đã hoàn thành")
                                            {
                                                <a asp-action="Print" asp-route-id="@order.Id" target="_blank" class="btn btn-sm btn-primary" title="In hóa đơn">
                                                    <i class="bi bi-printer"></i>
                                                </a>
                                            }
                                            @if (order.Status == "Đã hủy")
                                            {
                                                <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-sm btn-danger" title="Xóa đơn hàng"
                                                   onclick="return confirm('Bạn có chắc muốn xoá đơn hàng này?');">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <nav class="mt-4 d-flex justify-content-center">
            <ul class="pagination">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="?page=@i&search=@Model.SearchTerm">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>