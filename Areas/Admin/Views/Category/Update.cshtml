@model CuaHangBanSach.Models.Category

@{
    ViewData["Title"] = "Chỉnh sửa thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4 text-center text-primary">Chỉnh sửa thể loại</h2>

    <form asp-action="Update">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-semibold">Tên thể loại</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success px-4">Cập nhật</button>
            <a asp-action="Index" class="btn btn-secondary ms-2 px-4">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}