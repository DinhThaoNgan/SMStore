@model CuaHangBanSach.ViewModels.CategoryListViewModel

@{
    ViewData["Title"] = "Danh sách thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">Danh sách thể loại</h2>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Tìm kiếm thể loại..." value="@Model.SearchTerm" />
        <button type="submit" class="btn btn-primary">Tìm</button>
    </div>
</form>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Add" class="btn btn-success px-4">➕ Thêm mới</a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th class="text-center">#</th>
                <th>Tên thể loại</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items != null && Model.Items.Any())
            {
                var index = (Model.PageNumber - 1) * Model.PageSize + 1;
                foreach (var category in Model.Items)
                {
                    <tr>
                        <td class="text-center">@index</td>
                        <td>@category.Name</td>
                        <td class="text-center">
                            <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning btn-sm me-1">Sửa</a>
                            <a asp-action="Display" asp-route-id="@category.Id" class="btn btn-info btn-sm me-1">Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Xoá</a>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">Chưa có thể loại nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav>
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" href="?page=@i&search=@Model.SearchTerm">@i</a>
            </li>
        }
    </ul>
</nav>