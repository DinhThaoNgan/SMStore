@model CuaHangBanSach.Models.Category

@{
    ViewData["Title"] = "Xác nhận xoá thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="text-danger text-center mb-4">Bạn có chắc muốn xoá thể loại này?</h2>

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
        </div>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-danger px-4 me-3">Xoá</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Huỷ</a>
        </div>
    </form>
</div>