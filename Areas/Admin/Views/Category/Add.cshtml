@model CuaHangBanSach.Models.Category

@{
    ViewData["Title"] = "Thêm thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4 text-center text-success">Thêm thể loại mới</h2>

    <form asp-action="Add">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-semibold">Tên thể loại</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success px-4">Thêm</button>
            <a asp-action="Index" class="btn btn-secondary ms-2 px-4">Huỷ</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}