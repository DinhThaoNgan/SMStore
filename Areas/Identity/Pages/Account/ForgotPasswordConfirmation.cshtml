@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Xác nhận gửi liên kết";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5 text-center">
            <div class="alert alert-success p-4 shadow">
                <h4 class="mb-3"><i class="bi bi-envelope-check"></i> Đã gửi email</h4>
                <p>Vui lòng kiểm tra email để đặt lại mật khẩu.</p>
                <a asp-page="./Login" class="btn btn-outline-primary mt-3">Quay lại đăng nhập</a>
            </div>
        </div>
    </div>
</div>