@page
@model IndexModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Thông tin cá nhân";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="card shadow-lg border-0 fade-in">
    <div class="card-header text-white py-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <h4 class="mb-0"><i class="bi bi-person-circle me-2"></i>@ViewData["Title"]</h4>
    </div>
    <div class="card-body p-4">
        <partial name="_StatusMessage" for="StatusMessage" />

        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control" disabled />
                        <label asp-for="Username"><i class="bi bi-at me-2"></i>Tên đăng nhập</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Age" class="form-control" type="number" />
                        <label asp-for="Input.Age"><i class="bi bi-calendar me-2"></i>Tuổi</label>
                        <span asp-validation-for="Input.Age" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.FullName" class="form-control" />
                <label asp-for="Input.FullName"><i class="bi bi-person me-2"></i>Họ và tên</label>
                <span asp-validation-for="Input.FullName" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Address" class="form-control" />
                <label asp-for="Input.Address"><i class="bi bi-geo-alt me-2"></i>Địa chỉ</label>
                <span asp-validation-for="Input.Address" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber"><i class="bi bi-telephone me-2"></i>Số điện thoại</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100">
                <i class="bi bi-save me-2"></i> Lưu thay đổi
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}