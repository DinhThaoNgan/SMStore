@page
@model LogoutModel
@{
    ViewData["Title"] = "Đăng xuất";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5 text-center">
            @{
                if (User.Identity?.IsAuthenticated ?? false)
                {
                    <div class="card shadow">
                        <div class="card-header bg-warning text-dark">
                            <h4><i class="bi bi-box-arrow-right"></i> Đăng xuất</h4>
                        </div>
                        <div class="card-body">
                            <p>Bạn có chắc chắn muốn đăng xuất?</p>
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="btn btn-danger w-100">✅ Có, đăng xuất</button>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info p-4 shadow">
                        <h4 class="mb-3"><i class="bi bi-check-circle"></i> Đã đăng xuất</h4>
                        <p>Bạn đã đăng xuất khỏi hệ thống.</p>
                        <a asp-page="./Login" class="btn btn-primary mt-3">Đăng nhập lại</a>
                    </div>
                }
            }
        </div>
    </div>
</div>