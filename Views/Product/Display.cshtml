@model CuaHangBanSach.ViewModels.ProductDetailViewModel
@using System.Text.Json

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var simpleVariants = Model.Variants?.Select(v => new {
        color = v.Color,
        size = v.Size,
        stockQuantity = v.StockQuantity,
        imageUrl = v.ImageUrl
    });

    var allImages = new List<string>();
    if (!string.IsNullOrEmpty(Model.ImageUrl)) allImages.Add(Model.ImageUrl);
    if (Model.Variants != null)
    {
        allImages.AddRange(Model.Variants
            .Where(v => !string.IsNullOrEmpty(v.ImageUrl))
            .Select(v => v.ImageUrl!));
    }
    if (Model.Images != null)
    {
        allImages.AddRange(Model.Images
            .Where(img => !string.IsNullOrEmpty(img.Url))
            .Select(img => img.Url!));
    }
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 mb-3">
                <div class="card-body p-4 text-center">
                    <img id="mainImage" src="@Model.ImageUrl" class="img-fluid mb-3" style="max-height: 400px; object-fit: contain;" />
                </div>
            </div>
            @if (allImages.Distinct().Count() > 1)
            {
                <div class="d-flex flex-wrap justify-content-center gap-2">
                    @foreach (var img in allImages.Distinct())
                    {
                        <img src="@img" class="img-thumbnail rounded" style="width: 70px; height: 70px; object-fit: cover; cursor: pointer; border: 2px solid #e0e0e0; transition: all 0.3s;" 
                             onclick="setMainImage('@img')" 
                             onmouseover="this.style.borderColor='#3498db'; this.style.transform='scale(1.1)'" 
                             onmouseout="this.style.borderColor='#e0e0e0'; this.style.transform='scale(1)'" />
                    }
                </div>
            }
        </div>

        <div class="col-md-6">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-body p-4">
                    <h2 class="fw-bold mb-3" style="color: #2c3e50;">@Model.Name</h2>
                    
                    <div class="mb-4">
                        <span class="badge bg-success mb-2">Còn hàng</span>
                        <h3 class="fw-bold text-danger mb-0">
                            @Model.Price.ToString("N0") ₫
                        </h3>
                    </div>
                    
                    @if (Model.Category != null || Model.Brand != null)
                    {
                        <div class="mb-4">
                            @if (Model.Category != null)
                            {
                                <p class="mb-1">
                                    <i class="bi bi-tag-fill text-primary"></i> 
                                    <strong>Thể loại:</strong> @Model.Category.Name
                                </p>
                            }
                            @if (Model.Brand != null)
                            {
                                <p class="mb-0">
                                    <i class="bi bi-building text-info"></i> 
                                    <strong>Nhà xuất bản:</strong> @Model.Brand.Name
                                </p>
                            }
                        </div>
                    }

                    @if (Model.Variants != null && Model.Variants.Any())
                    {
                        <hr class="my-4" />
                        <h5 class="fw-bold mb-3"><i class="bi bi-palette-fill text-primary"></i> Chọn phiên bản:</h5>
                        <div class="mb-4 d-flex flex-wrap gap-2" id="colorOptions">
                            @foreach (var color in Model.Variants.Select(v => v.Color).Distinct())
                            {
                                <button type="button" class="btn btn-outline-dark variant-color" data-color="@color" style="border-radius: 8px;">
                                    @color
                                </button>
                            }
                        </div>

                        <h5 class="fw-bold mb-3"><i class="bi bi-tag-fill text-info"></i> Chọn phân loại:</h5>
                        <div class="mb-4 d-flex flex-wrap gap-2" id="sizeOptions">
                            @foreach (var size in Model.Variants.Select(v => v.Size).Distinct())
                            {
                                <button type="button" class="btn btn-outline-secondary variant-size" data-size="@size" style="border-radius: 8px;">
                                    @size
                                </button>
                            }
                        </div>

                        <div id="stockInfo" class="alert alert-info mb-3" style="display:none;"></div>
                        <div id="variantError" class="alert alert-danger mb-3" style="display:none;"></div>

                        <div id="quantitySection" class="mb-4" style="display:none;">
                            <label for="quantityInput" class="form-label fw-bold">Số lượng:</label>
                            <div class="input-group" style="width:150px;">
                                <button type="button" class="btn btn-outline-secondary rounded-start" onclick="changeQuantity(-1)">
                                    <i class="bi bi-dash"></i>
                                </button>
                                <input type="number" id="quantityInput" class="form-control text-center" value="1" min="1" />
                                <button type="button" class="btn btn-outline-secondary rounded-end" onclick="changeQuantity(1)">
                                    <i class="bi bi-plus"></i>
                                </button>
                            </div>
                        </div>
                    }

                    <div class="d-grid gap-2 mt-4">
                        <button type="button" class="btn btn-success btn-lg fw-bold" onclick="buyNow()">
                            <i class="bi bi-cart-check"></i> Mua ngay
                        </button>
                        <button type="button" class="btn btn-outline-primary btn-lg" onclick="addToCartAjax()">
                            <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mô tả sản phẩm -->
    <div class="mt-5">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-file-text"></i> Mô tả sản phẩm</h4>
            </div>
            <div class="card-body">
                <p style="white-space: pre-line; line-height: 1.8; color: #555;">@Model.Description</p>
            </div>
        </div>
    </div>



    <!-- Sản phẩm liên quan -->



    <hr class="my-5" />
    <div class="text-center mb-4">
        <h4 class="fw-bold mb-2" style="color: #2c3e50;">
            <i class="bi bi-arrow-repeat text-primary"></i> Sản phẩm liên quan
        </h4>
        <p class="text-muted">Những cuốn sách bạn có thể quan tâm</p>
    </div>

    <div id="relatedCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="30000">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.RelatedProducts.Count; i += 5)
            {
                var chunk = Model.RelatedProducts.Skip(i).Take(5).ToList();
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="d-flex justify-content-center gap-4 flex-wrap">
                        @foreach (var product in chunk)
                        {
                            <div class="card shadow-sm" style="width: 180px; transition: all 0.3s;">
                                <a href="/Product/Display/@product.Id" class="text-decoration-none text-dark">
                                    <div style="height: 140px; background: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                                        <img src="@product.ImageUrl" class="card-img-top" style="max-height: 140px; object-fit: contain; padding: 10px;" />
                                    </div>
                                    <div class="card-body text-center">
                                        <h6 class="card-title" style="font-size: 0.9rem; min-height: 40px; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                            @product.Name
                                        </h6>
                                        <p class="mb-1 text-danger fw-bold">@product.Price.ToString("N0") ₫</p>
                                        <small class="text-muted d-block">
                                            <i class="bi bi-building"></i> @product.Brand?.Name
                                        </small>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#relatedCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#relatedCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>

@section Scripts {
    <script>
        const variants = @Html.Raw(JsonSerializer.Serialize(simpleVariants));
        let selectedColor = null;
        let selectedSize = null;
        let currentStock = 0;

        function setMainImage(url) {
            document.getElementById("mainImage").src = url;
        }

        function resetToDefault() {
            setMainImage('@Model.ImageUrl');
            document.getElementById('stockInfo').style.display = 'none';
            document.getElementById('variantError').style.display = 'none';
            document.getElementById('quantitySection').style.display = 'none';
            document.getElementById('quantityInput').value = 0;
            disableActionButtons(true);
        }

        function updateDisplay() {
            const matched = variants.find(v => v.color === selectedColor && v.size === selectedSize);
            if (matched) {
                setMainImage(matched.imageUrl || '@Model.ImageUrl');
                currentStock = matched.stockQuantity;

                if (currentStock <= 0) {
                    const stockInfo = document.getElementById("stockInfo");
                    stockInfo.innerText = "❌ Biến thể này đã hết hàng.";
                    stockInfo.className = "alert alert-danger mb-3";
                    stockInfo.style.display = "block";
                    document.getElementById("variantError").style.display = "none";
                    document.getElementById("quantitySection").style.display = "none";
                    disableActionButtons(true);
                    return;
                }

                fetch('/ShoppingCart/GetVariantQuantityInCart?productId=@Model.Id&color=' + encodeURIComponent(selectedColor) + '&size=' + encodeURIComponent(selectedSize))
                    .then(res => res.json())
                    .then(inCart => {
                        const remaining = currentStock - inCart;

                        if (remaining <= 0) {
                            const stockInfo = document.getElementById("stockInfo");
                            stockInfo.innerText = "⚠️ Bạn đã thêm tối đa số lượng vào giỏ hàng.";
                            stockInfo.className = "alert alert-warning mb-3";
                            stockInfo.style.display = "block";
                            document.getElementById("variantError").style.display = "none";
                            document.getElementById("quantitySection").style.display = "none";
                            disableActionButtons(true);
                        } else {
                            const stockInfo = document.getElementById("stockInfo");
                            stockInfo.innerText = "✅ Tồn kho còn: " + remaining + " sản phẩm";
                            stockInfo.className = "alert alert-success mb-3";
                            stockInfo.style.display = "block";
                            document.getElementById("variantError").style.display = "none";
                            document.getElementById("quantitySection").style.display = "block";
                            document.getElementById("quantityInput").value = 1;
                            document.getElementById("quantityInput").max = remaining;
                            disableActionButtons(false);
                        }
                    });
            } else {
                resetToDefault();
                const variantError = document.getElementById('variantError');
                variantError.innerText = "❌ Vui lòng chọn đầy đủ phiên bản và phân loại.";
                variantError.className = "alert alert-danger mb-3";
                variantError.style.display = "block";
            }
        }

        function disableActionButtons(disable) {
            document.querySelector("button[onclick='buyNow()']").disabled = disable;
            document.querySelector("button[onclick='addToCartAjax()']").disabled = disable;
        }

        function updateButtons(className, selectedValue) {
            document.querySelectorAll('.' + className).forEach(btn => {
                btn.classList.remove('active', 'btn-dark', 'btn-primary');
                btn.classList.add('btn-outline-' + (className === 'variant-color' ? 'dark' : 'secondary'));
                if (btn.getAttribute('data-' + className.split('-')[1]) === selectedValue) {
                    btn.classList.remove('btn-outline-' + (className === 'variant-color' ? 'dark' : 'secondary'));
                    btn.classList.add('active', className === 'variant-color' ? 'btn-dark' : 'btn-primary');
                }
            });
        }

        document.querySelectorAll('.variant-color').forEach(btn => {
            btn.addEventListener('click', function () {
                selectedColor = (selectedColor === this.getAttribute('data-color')) ? null : this.getAttribute('data-color');
                updateButtons('variant-color', selectedColor);
                updateDisplay();
            });
        });

        document.querySelectorAll('.variant-size').forEach(btn => {
            btn.addEventListener('click', function () {
                selectedSize = (selectedSize === this.getAttribute('data-size')) ? null : this.getAttribute('data-size');
                updateButtons('variant-size', selectedSize);
                updateDisplay();
            });
        });

        function changeQuantity(delta) {
            const input = document.getElementById('quantityInput');
            let val = parseInt(input.value) || 0;
            val = Math.min(currentStock, Math.max(0, val + delta));
            input.value = val;
        }

        function validateVariantSelection() {
            const quantity = parseInt(document.getElementById('quantityInput')?.value || 0);
            if (!selectedColor || !selectedSize || quantity <= 0 || quantity > currentStock) {
                const variantError = document.getElementById('variantError');
                variantError.innerText = "❌ Vui lòng chọn phiên bản, phân loại và số lượng hợp lệ.";
                variantError.className = "alert alert-danger mb-3";
                variantError.style.display = "block";
                return false;
            }
            document.getElementById('variantError').style.display = "none";
            return true;
        }

        function addToCartAjax() {
            if (!validateVariantSelection()) return;
            const data = {
                productId: @Model.Id,
                quantity: parseInt(document.getElementById('quantityInput').value),
                color: selectedColor,
                size: selectedSize
            };
            fetch('/ShoppingCart/AddToCartWithVariant', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            }).then(res => {
                if (res.ok) {
                    if (window.updateCartIcon) window.updateCartIcon();
                    // Hiển thị thông báo thành công
                    const stockInfo = document.getElementById("stockInfo");
                    stockInfo.innerText = "✅ Đã thêm vào giỏ hàng thành công!";
                    stockInfo.className = "alert alert-success mb-3";
                    stockInfo.style.display = "block";
                    setTimeout(() => {
                        stockInfo.style.display = "none";
                    }, 2000);
                } else {
                    alert("Có lỗi xảy ra khi thêm vào giỏ hàng.");
                }
            });
        }

        function buyNow() {
            if (!validateVariantSelection()) return;
            const data = {
                productId: @Model.Id,
                quantity: parseInt(document.getElementById('quantityInput').value),
                color: selectedColor,
                size: selectedSize
            };
            fetch('/ShoppingCart/AddToCartWithVariant', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            }).then(res => {
                if (res.ok) {
                    window.location.href = "/ShoppingCart/Index";
                }
            });
        }
    </script>
}