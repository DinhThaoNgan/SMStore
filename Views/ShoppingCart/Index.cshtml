@model CuaHangBanSach.Models.ShoppingCart

@{
    ViewData["Title"] = "Giỏ hàng";
}

<h2 class="mb-4"><i class="bi bi-cart-fill"></i> Giỏ hàng của bạn</h2>

@if (!Model.Items.Any())
{
    <div class="alert alert-info">Giỏ hàng của bạn đang trống.</div>

    <div class="mt-3">
        <a asp-action="Index" asp-controller="Product" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left-circle"></i> Tiếp tục mua hàng
        </a>
    </div>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="table-warning text-center">
            <tr>
                <th style="width: 10%">Hình ảnh</th>
                <th style="width: 30%">Sản phẩm</th>
                <th style="width: 15%">Giá</th>
                <th style="width: 20%">Số lượng</th>
                <th style="width: 15%">Thành tiền</th>
                <th style="width: 10%">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                var imageUrl = string.IsNullOrEmpty(item.ImageUrl) ? Url.Content("~/images/no-image.png") : item.ImageUrl;
                <tr class="align-middle text-center">
                    <td>
                        <img src="@imageUrl" class="img-thumbnail" style="max-height: 60px; object-fit: contain; width: 60px;" />
                    </td>
                    <td class="text-start">
                        <strong>@item.Name</strong><br />
                        @if (!string.IsNullOrEmpty(item.Color))
                        {
                            <small class="text-muted">Phiên bản: @item.Color</small>
                            <br />
                        }
                        @if (!string.IsNullOrEmpty(item.Size))
                        {
                            <small class="text-muted">Phân loại: @item.Size</small>
                        }
                    </td>
                    <td>@string.Format("{0:N0} VND", item.Price)</td>
                    <td>
                        <div class="d-flex justify-content-center align-items-center">
                            <form asp-action="UpdateQuantity" method="post" class="me-2">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <input type="hidden" name="color" value="@item.Color" />
                                <input type="hidden" name="size" value="@item.Size" />
                                <input type="hidden" name="quantity" value="@(item.Quantity - 1)" />
                                <button class="btn btn-sm btn-outline-secondary" @(item.Quantity <= 1 ? "disabled" : "")>-</button>
                            </form>

                            <span class="px-2 fw-bold">@item.Quantity</span>

                            <form asp-action="UpdateQuantity" method="post" class="ms-2">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <input type="hidden" name="color" value="@item.Color" />
                                <input type="hidden" name="size" value="@item.Size" />
                                <input type="hidden" name="quantity" value="@(item.Quantity + 1)" />
                                <button class="btn btn-sm btn-outline-secondary">+</button>
                            </form>
                        </div>
                    </td>
                    <td>@string.Format("{0:N0} VND", item.Price * item.Quantity)</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" asp-route-color="@item.Color" asp-route-size="@item.Size" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash-fill"></i> Xoá
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <div>
            <a asp-action="Index" asp-controller="Product" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left-circle"></i> Tiếp tục mua hàng
            </a>
        </div>
        <div class="text-end">
            <h4>
                Tổng cộng:
                <span class="text-success fw-bold">@string.Format("{0:N0} VND", Model.GetTotalPrice())</span>
            </h4>

            <div class="mt-3">
                <a asp-action="Checkout" class="btn btn-success me-2">
                    <i class="bi bi-credit-card"></i> Tiếp theo
                </a>

                <a asp-action="ClearCart" class="btn btn-outline-danger">
                    <i class="bi bi-trash3"></i> Xoá toàn bộ giỏ hàng
                </a>
            </div>
        </div>
    </div>
}