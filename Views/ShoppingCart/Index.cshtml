@model CuaHangBanSach.Models.ShoppingCart

@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="d-flex align-items-center mb-4">
    <h2 class="mb-0 me-3">
        <i class="bi bi-cart-fill text-primary"></i> Giỏ hàng của bạn
    </h2>
    <span class="badge bg-primary rounded-pill">@Model.Items.Count sản phẩm</span>
</div>

@if (!Model.Items.Any())
{
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="bi bi-cart-x" style="font-size: 5rem; color: #bdc3c7;"></i>
        </div>
        <h3 class="text-muted mb-3">Giỏ hàng của bạn đang trống</h3>
        <p class="text-muted mb-4">Hãy thêm sản phẩm vào giỏ hàng để tiếp tục mua sắm</p>
        <a asp-action="Index" asp-controller="Product" class="btn btn-primary btn-lg">
            <i class="bi bi-arrow-left-circle"></i> Tiếp tục mua hàng
        </a>
    </div>
}
else
{
    <div class="row">
        <div class="col-lg-8">
            @foreach (var item in Model.Items)
            {
                var imageUrl = string.IsNullOrEmpty(item.ImageUrl) ? Url.Content("~/images/no-image.png") : item.ImageUrl;
                <div class="card mb-3 fade-in">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-2 text-center">
                                <img src="@imageUrl" class="img-fluid rounded" style="max-height: 100px; object-fit: contain;" alt="@item.Name" />
                            </div>
                            <div class="col-md-4">
                                <h6 class="fw-bold mb-2">@item.Name</h6>
                                @if (!string.IsNullOrEmpty(item.Color))
                                {
                                    <p class="mb-1 small text-muted">
                                        <i class="bi bi-palette-fill text-primary"></i> Phiên bản: <strong>@item.Color</strong>
                                    </p>
                                }
                                @if (!string.IsNullOrEmpty(item.Size))
                                {
                                    <p class="mb-0 small text-muted">
                                        <i class="bi bi-tag-fill text-info"></i> Phân loại: <strong>@item.Size</strong>
                                    </p>
                                }
                            </div>
                            <div class="col-md-2 text-center">
                                <p class="mb-0 fw-bold text-primary">@string.Format("{0:N0} ₫", item.Price)</p>
                                <small class="text-muted">đơn giá</small>
                            </div>
                            <div class="col-md-2">
                                <div class="d-flex justify-content-center align-items-center gap-2">
                                    <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <input type="hidden" name="color" value="@item.Color" />
                                        <input type="hidden" name="size" value="@item.Size" />
                                        <input type="hidden" name="quantity" value="@(item.Quantity - 1)" />
                                        <button class="btn btn-sm btn-outline-secondary rounded-circle" style="width: 35px; height: 35px;" @(item.Quantity <= 1 ? "disabled" : "")>
                                            <i class="bi bi-dash"></i>
                                        </button>
                                    </form>
                                    <span class="fw-bold px-2" style="min-width: 40px; text-align: center;">@item.Quantity</span>
                                    <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <input type="hidden" name="color" value="@item.Color" />
                                        <input type="hidden" name="size" value="@item.Size" />
                                        <input type="hidden" name="quantity" value="@(item.Quantity + 1)" />
                                        <button class="btn btn-sm btn-outline-secondary rounded-circle" style="width: 35px; height: 35px;">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-2 text-center">
                                <p class="mb-2 fw-bold text-success">@string.Format("{0:N0} ₫", item.Price * item.Quantity)</p>
                                <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" asp-route-color="@item.Color" asp-route-size="@item.Size" 
                                   class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <div class="col-lg-4">
            <div class="card shadow-lg sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-receipt"></i> Tóm tắt đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <span>Tạm tính:</span>
                        <span class="fw-bold">@string.Format("{0:N0} ₫", Model.GetTotalPrice())</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="fw-bold">Tổng cộng:</span>
                        <span class="fw-bold text-success fs-5">@string.Format("{0:N0} ₫", Model.GetTotalPrice())</span>
                    </div>
                    <a asp-action="Checkout" class="btn btn-success w-100 mb-2">
                        <i class="bi bi-credit-card"></i> Thanh toán
                    </a>
                    <a asp-action="Index" asp-controller="Product" class="btn btn-outline-primary w-100 mb-2">
                        <i class="bi bi-arrow-left-circle"></i> Tiếp tục mua hàng
                    </a>
                    <a asp-action="ClearCart" class="btn btn-outline-danger w-100" onclick="return confirm('Bạn có chắc muốn xóa toàn bộ giỏ hàng?');">
                        <i class="bi bi-trash3"></i> Xóa toàn bộ
                    </a>
                </div>
            </div>
        </div>
    </div>

}